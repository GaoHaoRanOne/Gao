<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_topic_face"
            android:layout_width="60dp"
            android:layout_height="60dp"
            />
        <TextView
            android:id="@+id/tv_topic_name"
            tools:text="TEST"
            android:layout_toEndOf="@id/iv_topic_face"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="13sp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/tv_topic_tips"
            tools:text="TEST"
            android:layout_toEndOf="@id/iv_topic_face"
            android:layout_alignBottom="@id/iv_topic_face"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_cecece"
            android:textSize="12sp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/tv_topic_comment"
            android:layout_alignParentEnd="true"
            tools:text="12"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/c_cecece"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_comment"
            android:drawablePadding="5dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_comment" />
        <TextView
            android:id="@+id/tv_topic_node"
            android:layout_toStartOf="@id/tv_topic_comment"
            android:layout_marginEnd="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:text="Python"
            android:textSize="12sp"
            android:textColor="#000"
            android:background="@color/c_cecece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_topic_comment"
            android:layout_marginRight="5dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="TEST"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"/>
</LinearLayout>
